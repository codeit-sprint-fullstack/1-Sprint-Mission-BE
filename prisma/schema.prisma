datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Article {
  id        Int              @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  comments  ArticleComment[] @relation("ArticleComments") // 명시적 관계 이름 부여
}

model ArticleComment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade, name: "ArticleComments")
  articleId Int
}

model ProductComment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  productId String
}
