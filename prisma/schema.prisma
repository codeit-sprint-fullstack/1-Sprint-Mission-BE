generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Int
  tags        String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  comments    Comment[] @relation("ProductComments") // Product와 Comment 간의 관계 설정
}

model Article {
  id          Int       @id @default(autoincrement())
  title       String
  content     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  comments    Comment[] @relation("ArticleComments") // Article과 Comment 간의 관계 설정
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  product   Product?  @relation("ProductComments", fields: [productId], references: [id], onDelete: Cascade)
  article   Article?  @relation("ArticleComments", fields: [articleId], references: [id], onDelete: Cascade)
  productId Int?
  articleId Int?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

