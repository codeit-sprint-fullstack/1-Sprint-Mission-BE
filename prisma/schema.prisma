generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String   
  content   String
  likeCount Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    String   
  imageUrl  String?
  comments  Comment[] @relation("ArticleComments") // 댓글과의 관계 설정
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  postId    Int
  boardType boardType @default(board)
  author    String 
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  article   Article   @relation("ArticleComments", fields: [postId], references: [id], onDelete: Cascade) // 관계 설정


  @@unique([id, boardType])
}

// 자유게시판 댓글인지 중고마켓 댓글인지 'board', 'market' 로 구분
enum boardType {
  board
  market
}